<!-- begin:: Content -->
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    Basic Example
                </h3>
                
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-toolbar">
                    <div class="dropdown dropdown-inline">
                        <button type="button" class="btn btn-brand btn-brand btn-upper btn-bold" data-toggle="modal" data-target="#exampleModal">Create New Board</button>
                        <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Create a new Board</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/todo/board/create" method="post" class="kt-form" >
                                                <div class="kt-portlet__body">
                                                    <div class="kt-section kt-section--first">
                                                        <div class="form-group">
                                                            <label>Board Name:</label>
                                                            <input type="text" name="board_name" class="form-control" placeholder="Enter Board Name">
                                                            <input hidden type="text" name="employee_id" class="form-control" value="<%= user.id %>">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-outline-brand" data-dismiss="modal">Close</button>
                                                    <Input type="submit" class="btn btn-brand" value="Create">
                                                </div>
                                            </form>
                                        </div>
                                        
                                        
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__body">
			
			<% if (errors) { %>
                <% errors.errors.forEach(function(error){ %>
        			<div class="alert alert-solid-danger alert-bold" role="alert">
                        <div class="alert-text"><%= error.msg %></div><br>
                        <div class="alert-close">
        				  	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
        				    	<span aria-hidden="true"><i class="la la-close"></i></span>
        				  	</button>
        				</div>
                    </div>
                <% }); %>
            <% } %>
            
            <!--begin: Datatable -->
            <% if (boards.length == 0) { %>
                <div class="kt-heading kt-heading--center">No Record Yet</div>
            <% } else { %>
            <table class="table table-striped- table-bordered table-hover" id="">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Board Name</th>
                        <th>Created By</th>
                        <th>Time Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% boards.forEach(function(board) { %>
                    <tr>
                        <td><%= board.id %></td>
                        <td><a href="/todo/board/<%= board.id %>"><%= board.board_name %></a></td>
                        <td><%= board.user.username %></td>
                        <td><%= moment(board.createdAt).fromNow() %></td>
                        <td nowrap><button type="button" class="btn btn-danger btn-elevate btn-icon btn-xs"><i class="la la-trash"></i></button></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } %>
            <!--end: Datatable -->

        </div>
        
    </div>
    
</div>

<!-- end:: Content -->


